@using Shop.Domain.Infrastructure
@model IEnumerable<Shop.Application.Cart.GetCart.Response>
<div class="field is-grouped" id="nav-small-cart">
    <p class="control">
        <a class="button is-warning" asp-page="/Cart">
            <span class="icon">
                <i class="fas fa-shopping-cart" aria-hidden="true"></i>
            </span>
            <span>
               @Model.Sum(x => x.ValueInRubles * x.Qty).GetRubPrice()
            </span>
        </a>
    </p>
</div>
