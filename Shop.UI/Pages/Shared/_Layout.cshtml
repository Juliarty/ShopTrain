<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop.UI</title>
    <environment include="Development">
        <link href="~/lib/bulma-0.9.1/css/bulma.css" rel="stylesheet" />
    </environment>
    <environment include="Production">
        <link href="~/lib/bulma-0.9.1/css/bulma.min.css" rel="stylesheet" />
    </environment>
</head>
<body>
    <header>
        <a asp-page="/Admin/Index">Admin</a>
        <a asp-page="/Checkout/CustomerInformation">Customer Information</a>
        <a asp-page="/Checkout/Payment">Payment</a>
        <a asp-page="/Accounts/Login">Sign In</a>
        <a asp-controller="Account" asp-action="LogOut">Sign Out</a>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Shop.UI - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>


    <environment include="Development">
    </environment>
    <environment include="Production">
    </environment>


    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
